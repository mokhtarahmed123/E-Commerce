@model E_Commerce.ViewModel.PaymentWIthOrderVM

@{
    ViewData["Title"] = "Payment Method";
}

<h2 class="text-center mb-4">Payment Method</h2>

<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="SavePaymentMethod" asp-controller="Payment"  method="post">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group mb-3">
                <label class="form-label">Product Name</label>
                <input type="text" class="form-control" value="@Model.ProductName" readonly />
            </div>

            <div class="form-group mb-3">
                <label asp-for="PaymentMethod" class="form-label">Select Payment Method</label>
                <select asp-for="PaymentMethod" class="form-control">
                    <option value="">-- Select --</option>
                    <option value="Cash">Cash</option>
                    <option value="Visa">Visa</option>
                </select>
                <span asp-validation-for="PaymentMethod" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Quantity" class="form-label">Quantity</label>
                <input asp-for="Quantity" class="form-control" readonly />
            </div>

            <div class="form-group mb-3">
                <label asp-for="TotalPrice" class="form-label">Total Price</label>
                <input asp-for="TotalPrice" class="form-control" readonly />
            </div>

            <input type="hidden" asp-for="OrderId" />
            <input type="hidden" asp-for="PaymentId" />

            <button type="submit" class="btn btn-success w-100">Confirm Payment</button>
        </form>

        <div class="mt-3">
            <a asp-action="Index" asp-controller="OrderDetail" class="btn btn-secondary w-100">Back to List</a>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
