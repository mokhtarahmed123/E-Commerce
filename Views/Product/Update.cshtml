@model ProductViewModelWithCategory
@{
    ViewData["Title"] = "Update";
    var categoryList = Model.categories ?? new List<Category>();   
    var selectListItems = new SelectList(categoryList, "Id", "Name", Model.CId);  
}

<div class="row justify-content-center mt-5">
    <div class="col-md-6">
        <div class="card shadow-lg rounded-3">
            <div class="card-body">
                <h4 class="card-title mb-4 text-center">Update Product</h4>
                <form asp-action="SaveEdit" asp-route-id="@Model.Id" asp-controller="Product" method="post">
                    <div asp-validation-summary="All" class="text-danger mb-3"></div>
                    <input type="hidden" asp-for="Id" />

                    <div class="mb-3">
                        <label asp-for="Name" class="form-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Price" class="form-label"></label>
                        <input asp-for="Price" class="form-control" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Quantity" class="form-label"></label>
                        <input asp-for="Quantity" class="form-control" />
                        <span asp-validation-for="Quantity" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="UrlImage" class="form-label"></label>
                        <input asp-for="UrlImage" class="form-control" />
                        <span asp-validation-for="UrlImage" class="text-danger"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="CId" class="form-label"></label>
                        <select asp-for="CId" class="form-select" asp-items="@(new SelectList(Model.categories, "Id", "Name", Model.CId))">
                            <option value="">-- Select Category --</option>
                        </select>
                        <span asp-validation-for="CId" class="text-danger"></span>
                    </div>

                    <div class="d-grid">
                        <input type="submit" value="Edit" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>

        <div class="text-center mt-3">
            <a asp-action="AllProduct" class="btn btn-dark">Back to List</a>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

